<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache
Software Foundation//DTD Tiles Configuration 3.0//EN"
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- template definition -->
	<definition name="baseLayout_store" template="/WEB-INF/layouts/back_store/template/baseLayout.jsp">
		<put-attribute name="ogImageUrl" value="img/common/logo-square.png" />
		<put-attribute name="ogImageWidth" value="400" />
		<put-attribute name="ogImageHeight" value="400" />
		<put-attribute name="pageDescription" value="coffeenow.gr - The new way to order coffee online, from all over Greece" />
	
		<put-attribute name="navigation" value="/WEB-INF/layouts/back_store/template/navigation.jsp" />
		<put-attribute name="content" value="" />
		<put-attribute name="leftsidebar" value="" />
		<put-attribute name="footer" value="/WEB-INF/layouts/back_store/template/footer.jsp" />
	</definition>
	
	<!-- definition name = request mapping return string | all attributes can change, except the name="content" one -->
	<definition name="back_store/index" extends="baseLayout_store">
		<put-attribute name="title" value="Store Login | CoffeeNow" />
		<put-attribute name="ogUrl" value="/store" />
		
		<put-attribute name="navigation" value="" />
		<put-attribute name="content" value="/WEB-INF/views/back_store/index.jsp" />
		<put-attribute name="footer" value="" />
	</definition>
	
	<definition name="back_store/dashboard/index" extends="baseLayout_store">
		<put-attribute name="title" value="Store Dashboard | CoffeeNow" />
		<put-attribute name="ogUrl" value="/store/dashboard" />
		
		<put-attribute name="content" value="/WEB-INF/views/back_store/dashboard/index.jsp" />
		<put-attribute name="leftsidebar" value="/WEB-INF/layouts/back_store/template/sidebar-left.jsp" />
	</definition>
	
</tiles-definitions>