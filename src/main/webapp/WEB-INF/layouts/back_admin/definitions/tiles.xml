<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache
Software Foundation//DTD Tiles Configuration 3.0//EN"
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- template definition -->
	<definition name="baseLayout_admin" template="/WEB-INF/layouts/back_admin/template/baseLayout.jsp">
		<put-attribute name="ogImageUrl" value="/img/common/fb-logo.jpg" />
		<put-attribute name="ogImageWidth" value="250" />
		<put-attribute name="ogImageHeight" value="250" />
		<put-attribute name="pageDescription" value="coffeenow.gr - The new way to order coffee online, from all over Greece" />
	
		<put-attribute name="navigation" value="/WEB-INF/layouts/back_admin/template/navigation.jsp" />
		<put-attribute name="content" value="" />
		<put-attribute name="leftsidebar" value="" />
		<put-attribute name="footer" value="/WEB-INF/layouts/back_admin/template/footer.jsp" />
	</definition>
	
	<!-- definition name = request mapping return string | all attributes can change, except the name="content" one -->
	<definition name="back_admin/index" extends="baseLayout_admin">
		<put-attribute name="title" value="Administrator Login | CoffeeNow" />
		<put-attribute name="ogUrl" value="/administrator" />
		
		<put-attribute name="content" value="/WEB-INF/views/back_admin/index.jsp" />
	</definition>
	
	<definition name="back_admin/dashboard/index" extends="baseLayout_admin">
		<put-attribute name="title" value="Administrator Dashboard | CoffeeNow" />
		<put-attribute name="ogUrl" value="/administrator/dashboard" />
		
		<put-attribute name="content" value="/WEB-INF/views/back_admin/dashboard/index.jsp" />
		<put-attribute name="leftsidebar" value="/WEB-INF/layouts/back_admin/template/sidebar-left.jsp" />
	</definition>
	
</tiles-definitions>